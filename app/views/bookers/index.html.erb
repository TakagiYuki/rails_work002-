<h1>Books</h1>
  <table class = "table">
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><u><%= link_to "Show", book_path(book.id)%></u></td>
        <td><u><%= link_to "Edit", edit_book_path(book.id)%></u></td>
        <td><u><%= link_to "Destroy", destroy_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></u></td>
      </tr>
    <% end %>
  </table>

      <h1>New book</h1>
                        <!--create-->
    <%= form_for(@book,url:'/books') do |f| %>
         <%= render 'shared/error_messages' %>
       <p>Title</p>
       <%= f.text_field :title %>

       <p>Body</p>
       <%= f.text_area :body %>

       <p></p>
       <%= f.submit 'Create Book' %>
    <% end %>